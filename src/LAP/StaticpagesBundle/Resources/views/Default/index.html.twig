{% extends 'LAPAdminBundle::layout.html.twig' %}

{% block title %}
	{{ parent() }} - Pages statiques
{% endblock %}

{% block body %}
<section id="container" >
		{{ include("LAPAdminBundle:Default:entete.html.twig") }}
      
      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
				{% for message in app.session.flashbag.get('notice') %}
					<div class="row mt">
						<div class="col-md-12">
							<div class="alert alert-success alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>{{ message }}</div>
						</div>
					</div>
				{% endfor %}
              <div class="row">
                  <div class="col-lg-12 main-chart">                  
					<div class="row mt">
					<div class="col-md-12">
                      <div class="content-panel">
                          <table class="table table-striped table-advance table-hover">
	                  	  	  <h4><i class="fa fa-angle-right"></i> Pages statiques</h4><!--<a href="{# path('lap_notifications_write') #}" class="btn btn-theme pull-right remonte01"><i class="fa fa-pencil"></i> Envoyer une notification</a>-->
	                  	  	  <hr>
                              <thead>
                              <tr>
								  <th>Id</th>
								  <th><i class="fa fa-edit"></i> Titre</th>
                                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> Résumé</th>
								  <th><i class="fa fa-bookmark"></i> Date de modification</th>
                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
							  {% for page in listeAllpages %}
                              <tr>
								  <td>{{ page.id }}</td>
                                  <td><a href="{{ path('lap_staticpages_viewpage', {'id': page.id}) }}">{{ page.titre }}</a></td>
                                  <td>{{ page.texte|raw }}...</td>
								  <td>{{ page.dateModif|date('d/m/Y') }}</td>
                                  <td class="width150">
									  <a href="{{ path('lap_staticpages_viewpage', { 'id': page.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></a>
                                      {# if is_granted('ROLE_SUPERADMIN') %}<a href="{{ path('lap_messagerie_delete', { 'id': page.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>{% endif #}
                                  </td>
                              </tr>
							  {% endfor %}
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div>
			  </div>
            </div><!-- /col-lg-9 END SECTION MIDDLE -->
                  
                  
      
          </section>
      </section>
</section>
{% endblock %}
