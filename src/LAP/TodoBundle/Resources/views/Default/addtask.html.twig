{% extends 'LAPAdminBundle::layout.html.twig' %}

{% block title %}
	{{ parent() }} - Ajouter une tâche
{% endblock %}

{% block body %}
<section id="container" >
{{ include("LAPAdminBundle:Default:entete.html.twig") }}
<section id="main-content">
          <section class="wrapper">
              <div class="row mt">
          		<div class="col-lg-6">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Ajouter une tâche</h4>
					  {{ form_start(form, {'attr': {'class': 'form_horizontal style-form'}}) }}
					  
					  {{ form_errors(form) }}
						<div class="form-group">
							{{ form_label(form.titre, "Titre", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
							{{ form_errors(form.titre) }}
							<div class="col-sm-10">
								{{ form_widget(form.titre, {'attr':{'class': 'form-control'}}) }}
								<span class="help-block"><em><i class="fa fa-warning"></i> Attention à ce que votre titre ne soit pas trop long !</em></span>
							</div>
							
							{{ form_label(form.dateFin, "Date de fin", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.dateFin) }}
							<div class="col-sm-10 date-input">
								{{ form_widget(form.dateFin, {'attr':{'class': 'form-control datepicker1'}}) }}
							</div>
							
							{{ form_label(form.forall, "Pour tout le monde ?", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.forall) }}
							<div class="checkbox col-sm-2" style="margin-bottom: 0;">
								{{ form_widget(form.forall, {'attr':{'class': 'form-control', 'style' : 'margin-bottom: 10px;'}}) }}
							</div>
							<div class="clear"></div>
							
							<div style="display: none;">
							{{ form_widget(form.isdone) }}
							{% set dt = "now"|date("Y-m-d H:i:s") %}
							{{ form_widget(form.dateCrea) }}
							{{ form_widget(form.auteur, {'value': idusr}) }}</div>
						</div>
					  {{ form_rest(form) }}
					  {{ form_end(form) }}
				  </div>
				</div>
			  </div>
		  </section>
</section>
{% endblock %}