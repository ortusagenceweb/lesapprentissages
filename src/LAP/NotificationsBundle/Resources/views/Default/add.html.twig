{% extends 'LAPAdminBundle::layout.html.twig' %}

{% block title %}
	{{ parent() }} - Envoyer une notification
{% endblock %}

{% block body %}
<section id="container" >
{{ include("LAPAdminBundle:Default:entete.html.twig") }}
<section id="main-content">
          <section class="wrapper">
              <div class="row mt">
          		<div class="col-lg-6">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Envoyer une notification</h4>
					  {{ form_start(form, {'attr': {'class': 'form_horizontal style-form'}}) }}
					  {{ form_errors(form) }}
						<div class="form-group">
							{{ form_label(form.statut, "Statut :", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
							{{ form_errors(form.statut) }}
							<div class="col-sm-10" style="margin-bottom: 15px;">
								{{ form_widget(form.statut, {'attr':{'class': 'form-control'}}) }}
							</div>
							
							{{ form_label(form.titre, "Titre :", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label', 'style': 'clear: both'}}) }}
							{{ form_errors(form.titre) }}
							<div class="col-sm-10">
								{{ form_widget(form.titre, {'attr':{'class': 'form-control'}}) }}
								<span class="help-block"><em>Choisissez un titre relativement court (45 caract√®res maxi - espaces compris).</em></span>
							</div>
							
							{{ form_label(form.texte, "Votre texte :", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
							{{ form_errors(form.texte) }}
							<div class="col-sm-10" style="margin-bottom: 15px;">
								{{ form_widget(form.texte, {'attr':{'class': 'form-control', 'style': 'resize: vertical;'}})|raw }}
							</div>
						</div>
					  <div style="display: none;">{{ form_widget(form.auteur, {value: idusr }) }}</div>
					  {{ form_rest(form) }}
					  {{ form_end(form) }}
				  </div>
				</div>
			  </div>
		  </section>
</section>
{% endblock %}