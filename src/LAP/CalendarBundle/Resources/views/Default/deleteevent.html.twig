{% extends 'LAPAdminBundle::layout.html.twig' %}

{% block title %}
	{{ parent() }} - Supprimer un évènement
{% endblock %}

{% block body %}
<section id="container" >
{{ include("LAPAdminBundle:Default:entete.html.twig") }}
<section id="main-content">
          <section class="wrapper">
              <div class="row mt">
          		<div class="col-lg-6">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Supprimer un évènement</h4>
					  <p><h3>Voulez-vous vraiment supprimer l'évènement du {{ event.start|date('d-m-Y') }} ?</h3></p>
					  <p>&nbsp;</p>
						<form action="{{ path('lap_calendar_deleteevent', {'id': event.id}) }}" method="post">
							<a href="{{ path('lap_calendar_editevent', {'id': event.id}) }}" class="btn btn-default">
							<i class="glyphicon glyphicon-chevron-left"></i>Retour à l'évènement</a>
							<input type="submit" value="Supprimer" class="btn btn-danger" />
							{{ form_rest(form) }}
						</form>
				  </div>
				</div>
			  </div>
		  </section>
</section>
{% endblock %}