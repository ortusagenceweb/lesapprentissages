{% extends 'LAPAdminBundle::layout.html.twig' %}

{% block title %}
	{{ parent() }} - Ajouter un évènement
{% endblock %}

{% block body %}
<section id="container" >
{{ include("LAPAdminBundle:Default:entete.html.twig") }}
<section id="main-content">
          <section class="wrapper">
              <div class="row mt">
          		<div class="col-lg-6">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Ajouter un évènement</h4>
					  {{ form_start(form, {'attr': {'class': 'form_horizontal style-form'}}) }}
					  {{ form_errors(form) }}
						<div class="form-group">						
							{{ form_label(form.title, "Titre", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
							{{ form_errors(form.title) }}
							<div class="col-sm-10">
								{{ form_widget(form.title, {'attr':{'class': 'form-control'}}) }}
							</div>
							
							{{ form_label(form.start, "Date de début", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.start) }}
							<div class="col-sm-10 descend-10">
								{{ form_widget(form.start, {'attr':{'class': 'form-control datepicker2'}}) }}
							</div>
							<div class="clear"></div>
							
							{{ form_label(form.startHour, "Heure de début", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.startHour) }}
							<div class="col-sm-10 descend-10">
								{{ form_widget(form.startHour, {'attr':{'class': 'form-control timepicker1'}}) }}
							</div>
							<div class="clear"></div>
							
							{{ form_label(form.end, "Date de fin", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.end) }}
							<div class="col-sm-10 descend-10">
								{{ form_widget(form.end, {'attr':{'class': 'form-control datepicker2'}}) }}
							</div>
							<div class="clear"></div>
							
							{{ form_label(form.endHour, "Heure de fin", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.endHour) }}
							<div class="col-sm-10 descend-10">
								{{ form_widget(form.endHour, {'attr':{'class': 'form-control timepicker1'}}) }}
							</div>
							<div class="clear"></div>
							
							<p class="descend-10"></p>
							{{ form_label(form.color, "Couleur", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
							{{ form_errors(form.color) }}
							<div class="col-sm-10">
								{{ form_widget(form.color, {'attr':{'class': 'pick-a-color form-control'}}) }}
							</div>
							<div class="clear"></div>
							
							<p class="descend-10"></p>
							{{ form_label(form.texte, "Description", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.texte) }}
							<div class="col-sm-10" style="margin-bottom: 15px;">
								{{ form_widget(form.texte, {'attr':{'class': 'form-control', 'style': 'resize: vertical;'}})|raw }}
							</div>
							
							{{ form_label(form.allDay, "Dure toute la journée ?", {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label descend-10'}}) }}
							{{ form_errors(form.allDay) }}
							<div class="checkbox col-sm-2" style="margin-bottom: 0;">
								{{ form_widget(form.allDay, {'attr':{'class': 'form-control', 'style' : 'margin-bottom: 10px;'}}) }}
							</div>
							
							<div class="clear"></div>
							<a href="{{ path('lap_calendar_homepage') }}" class="btn btn-default pull-right descend-10"><i class="fa fa-arrow-left"></i> Retour au calendrier</a>
						</div>
						<div style="display: none;">
							{{ form_widget(form.dateCrea) }}
							{{ form_widget(form.auteur, {'value': idusr}) }}
							{{ form_widget(form.url, {'value': url}) }}</div>
					  {{ form_rest(form) }}
					  {{ form_end(form) }}
				  </div>
				</div>
			  </div>
		  </section>
</section>
{% endblock %}